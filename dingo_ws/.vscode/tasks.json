{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "catkin",
			"args": [
				"build",
				"--workspace",
				"${workspaceFolder}",
				"--cmake-args",
				"-DCMAKE_BUILD_TYPE=Debug"
			],
			"problemMatcher": [
				"$catkin-gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "catkin: build"
		}
	]
}
